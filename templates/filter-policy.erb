    <AttributeFilterPolicy id="<%= @name %>">
<% if scope['requesters'].length > 1 -%>
        <PolicyRequirementRule xsi:type="OR">
<% scope['requesters'].each do |this_requester| -%>
            <Rule xsi:type="Requester" value="<%= this_requester %>" />
<% end -%>
        </PolicyRequirementRule>
<% else -%>
        <PolicyRequirementRule xsi:type="Requester" value="<%= scope['requesters'] %>" />
<% end -%>

<% scope['attributes'].each do |this_attribute| -%>
        <AttributeRule attributeID="<%= this_attribute %>">
            <PermitValueRule xsi:type="ANY" />
        </AttributeRule>

<% end -%>
    </AttributeFilterPolicy>
