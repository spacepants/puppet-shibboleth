    <MetadataProvider id="<%= scope['title'] %>"
                      xsi:type="FileBackedHTTPMetadataProvider"
                      xmlns="urn:mace:shibboleth:2.0:metadata"
                      metadataURL="<%= scope['metadata_url'] %>/<%= scope['metadata_file'] %>"
                      backingFile="%{idp.home}/metadata/<%= scope['metadata_file'] %>"
                      minRefreshDelay="<%= scope['min_refresh'] %>"
                      maxRefreshDelay="<%= scope['max_refresh'] %>"
                      refreshDelayFactor="<%= scope['efresh_delay'] %>">

        <MetadataFilter xsi:type="SignatureValidation" requireSignedRoot="true"
                        certificateFile="%{idp.home}/credentials/<%= scope['cert_file'] %>" />
        <MetadataFilter xsi:type="RequiredValidUntil" maxValidityInterval="<%= scope['valid_until'] %>"/>
        <MetadataFilter xsi:type="EntityRoleWhiteList">
            <RetainedRole>md:SPSSODescriptor</RetainedRole>
        </MetadataFilter>
    </MetadataProvider>
